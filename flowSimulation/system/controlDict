FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../include/settings"

application     simpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         $N_iterations; // Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings

deltaT          1;

writeControl    timeStep;

writeInterval   $write_interval; // Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    #include "streamLines"
    #include "wallBoundedStreamLines"
    #include "cuttingPlane"
    #include "forceCoeffs"
    #include "ensightWrite"
}


