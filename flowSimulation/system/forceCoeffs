#include        "../include/settings"

forceCoeffs1
{
    type            forceCoeffs;

    libs            (forces);

    writeControl    timeStep;
    timeInterval    1;

    log             yes;

    patches         ($geometry_boundary);  // Parameters imported from DragAndDownForcePractice/meshGenerator/include/settings sourced via DragAndDownForcePractice/flowSimulation/include/setting
    rho             rhoInf;      // Indicates incompressible
    rhoInf          1;           // Required when rho = rhoInf
    liftDir         (0 0 1);
    dragDir         (1 0 0);
    CofR            (0.72 0 0);  // Axle midpoint on ground
    pitchAxis       (0 1 0);
    magUInf         $magU; // Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings
    lRef            $lRef; // Wheelbase length// Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings
    Aref            $Aref; // Estimated // Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings
}

