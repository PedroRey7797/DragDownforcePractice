streamLines
{
    type    streamLine;
    libs    (fieldFunctionObjects);

    // Output every
    writeControl    writeTime;
    // writeInterval 10;

    setFormat   vtk;

    // Tracking direction (forward | backward | bidirectional)
    direction   forward;

    // Fields to sample
    fields      (p U k);

    // Steps particles can travel before being removed
    lifeTime    $stream_line_steps; // Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings

    //- Specify either absolute length of steps (trackLength) or a number
    //  of subcycling steps per cell (nSubCycle)

    // Size of single track segment [m]
    //trackLength 1e-3;

    // Number of steps per cell (estimate). Set to 1 to disable subcycling.
    nSubCycle   5;

    // Cloud name to use
    cloud       particleTracks;

    // Seeding method.
    seedSampleSet
    {
        type        uniform;
        axis        x;  //distance;

        // Note: tracks slightly offset so as not to be on a face
        start       $line_start; // Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings
        end         $line_end; // Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings
        nPoints     $line_points; // Parameters imported from DragAndDownForcePractice/flowSimulation/include/settings
    }
}


